<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <CheckBox
        android:id="@+id/caracteristica_aire_acondicionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Aire acondicionado"
        android:layout_marginLeft="40dp"/>

    <CheckBox
        android:id="@+id/caracteristica_barra_tragos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Barra de tragos"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/baños_mixtos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Baños mixtos"
        android:layout_marginLeft="40dp"/>

    <CheckBox
        android:id="@+id/caracteristica_happy_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Happy hour"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/caracteristica_ladys_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Ladys night"
        android:layout_marginLeft="40dp"/>

    <CheckBox
        android:id="@+id/caracteristica_pantalla_gigante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Pantalla gigante"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/caracteristica_pista_baile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Pista de baile "
        android:layout_marginLeft="10dp"/>


    <CheckBox
        android:id="@+id/caracteristica_sector_fumadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="Sector fumadores"
        android:layout_marginLeft="40dp"/>


    <CheckBox
        android:id="@+id/caracteristica_terraza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Terraza"
        android:layout_marginLeft="10dp"/>


    <CheckBox
        android:id="@+id/caracteristica_mesas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="Mesas"
        android:layout_marginLeft="40dp"/>


</GridLayout>