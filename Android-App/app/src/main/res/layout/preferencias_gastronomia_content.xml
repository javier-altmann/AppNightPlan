<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <CheckBox
        android:id="@+id/gastronomia_cerveza_artesanal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginLeft="15dp"
        android:text="Cerveza Artesanal " />

    <CheckBox
        android:id="@+id/gastronomia_comida_mexicana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Comida Mexicana"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/gastronomia_comida_peruana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginLeft="15dp"
        android:text="Comida Peruana " />

    <CheckBox
        android:id="@+id/gastronomia_comida_arabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Comida Arabe "
        android:layout_marginLeft="15dp"/>

    <CheckBox
        android:id="@+id/gastronomia_jugos_exprimidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Jugos Exprimidos"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/gastronomia_hamburguesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="Hamburguesa"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/gastronomia_pasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Pasta"
        android:layout_marginLeft="20dp"/>


    <CheckBox
        android:id="@+id/gastronomia_pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Pizzeria"
        android:layout_marginLeft="15dp"/>


    <CheckBox
        android:id="@+id/gastronomia_sushi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Sushi"
        android:layout_marginLeft="15dp"/>

    <CheckBox
        android:id="@+id/gastronomia_tragos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="Tragos"
        android:layout_marginLeft="20dp"/>


</GridLayout>